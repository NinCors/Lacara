<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSplashBG"
    tools:context="com.example.amk.lacara.UserSettings">

    <ToggleButton
            android:id="@+id/theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Light Theme"
            android:textOn="Dark Theme"
            tools:layout_editor_absoluteY="423dp"
            tools:layout_editor_absoluteX="16dp"
        android:layout_above="@+id/saveInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/settingsTB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <EditText
        android:id="@+id/budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Budget"
        android:inputType="textPersonName"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/settingsTB"
        android:layout_alignLeft="@+id/logoutButton"
        android:layout_alignStart="@+id/logoutButton"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />
    <Button
        android:id="@+id/saveInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveInfo"
        android:text="Save"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignBaseline="@+id/logoutButton"
        android:layout_alignBottom="@+id/logoutButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_marginTop="42dp"
        android:layout_alignTop="@+id/budget"
        android:layout_alignLeft="@+id/budget"
        android:layout_alignStart="@+id/budget" />

</RelativeLayout>
