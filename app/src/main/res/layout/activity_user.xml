<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorSplashBG"
    tools:context="com.example.amk.lacara.UserActivity">

    <ImageButton
        android:id="@+id/BTSettings"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="matrix"
        app:srcCompat="@android:drawable/ic_menu_preferences"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/BTCamera"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="matrix"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:layout_below="@+id/BTSettings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/BTManual"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="matrix"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_below="@+id/BTGRAPHS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/BTAlert"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:cropToPadding="false"
        android:scaleType="matrix"
        app:srcCompat="@android:drawable/ic_dialog_alert"
        android:layout_below="@+id/BTCalendar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/BTCalendar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="matrix"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:layout_below="@+id/BTCamera"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/BTGRAPHS"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="matrix"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:layout_below="@+id/BTAlert"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
