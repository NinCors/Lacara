<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amk.lacara.UserActivity">

    <TextView
        android:text="This is where stuff happens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="CAMERA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="102dp"
        android:id="@+id/BTcamera"
        android:layout_alignLeft="@+id/BTCalendar"
        android:layout_alignStart="@+id/BTCalendar"
        android:layout_alignRight="@+id/BTCalendar"
        android:layout_alignEnd="@+id/BTCalendar" />

    <Button
        android:text="GO TO GRAPHS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BTGraphs"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="GO TO CALENDAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BTGraphs"
        android:layout_alignLeft="@+id/BTGraphs"
        android:layout_alignStart="@+id/BTGraphs"
        android:layout_marginTop="11dp"
        android:id="@+id/BTCalendar"
        android:layout_alignRight="@+id/BTGraphs"
        android:layout_alignEnd="@+id/BTGraphs" />

    <Button
        android:id="@+id/BTManual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Manual Input" />
</RelativeLayout>
