<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorSplashBG"
            tools:context="com.example.amk.lacara.UserActivity">


    <ImageButton
        android:id="@+id/BTSettings"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_menu_preferences"
        android:background="@null"
        android:layout_above="@+id/BTCamera"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:id="@+id/BTManual"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:background="@null"
        android:layout_marginBottom="58dp"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_above="@+id/ts"
        android:layout_toLeftOf="@+id/BTCamera"
        android:layout_toStartOf="@+id/BTCamera" />

    <ImageButton
        android:id="@+id/BTCalendar"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:background="@null"
        android:layout_above="@+id/BTManual"
        android:layout_alignRight="@+id/BudgetLabel"
        android:layout_alignEnd="@+id/BudgetLabel" />

    <ImageButton
        android:id="@+id/BTGRAPHS"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:background="@null"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_above="@+id/BTCamera"
        android:layout_toRightOf="@+id/BTSettings"
        android:layout_toEndOf="@+id/BTSettings" />


            <TextView
                android:id="@+id/BudgetLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Remaining: "
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginBottom="18dp"
                android:layout_above="@+id/update"
                android:layout_alignRight="@+id/ts"
                android:layout_alignEnd="@+id/ts" />

            <TextView
                android:id="@+id/ts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Total Spent:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginBottom="16dp"
                android:layout_above="@+id/spent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="0.00"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/update"
        android:layout_alignBottom="@+id/update"
        android:layout_alignLeft="@+id/spent"
        android:layout_alignStart="@+id/spent" />

            <Button
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Update"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/MainTB"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/BTCamera"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:background="@null"
        android:layout_alignTop="@+id/BTManual"
        android:layout_toLeftOf="@+id/update"
        android:layout_toStartOf="@+id/update" />

    <TextView
        android:id="@+id/spent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:fontFamily="serif"
        android:text="0.00"
        android:textSize="24sp"
        android:layout_above="@+id/BudgetLabel"
        android:layout_alignLeft="@+id/BTCalendar"
        android:layout_alignStart="@+id/BTCalendar" />

</RelativeLayout>

