<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="30pt"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="49dp"
        android:text="Item" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="30pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Location"
        android:layout_below="@+id/displayItem"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="30pt"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_alignTop="@+id/datePicker2"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="30pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Price"
        android:layout_below="@+id/datePicker2"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:id="@+id/displayItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/displayLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/displayItem"
        android:layout_alignStart="@+id/displayItem" />

    <EditText
        android:id="@+id/displayPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignLeft="@+id/datePicker2"
        android:layout_alignStart="@+id/datePicker2" />

    <Button
        android:id="@+id/editInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_below="@+id/displayPrice"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:layout_marginTop="32dp" />

    <DatePicker
        android:id="@+id/datePicker2"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:datePickerMode="spinner"
        android:calendarViewShown = "false"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/displayLocation"
        android:layout_alignLeft="@+id/displayLocation"
        android:layout_alignStart="@+id/displayLocation" />
</RelativeLayout>
